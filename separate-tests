#!/usr/bin/env php
<?php
declare(strict_types=1);

use Symfony\Component\Console\Application;
use \TestSeparator\Command\SeparateTestsCommand;
use \TestSeparator\Handler\SeparateTestsHandler;
use \TestSeparator\Handler\ServicesSeparateTestsFactory;
use \TestSeparator\Handler\ConfigurationFactory;
use TestSeparator\Service\Logger;

require 'vendor/autoload.php';

$application = new Application();

$logger = new Logger();

try {
    // TODO use standard symfony configuration
    $configuration = ConfigurationFactory::makeConfiguration('config/test_separator.yml');

    $separateHandler = new SeparateTestsHandler(
        ServicesSeparateTestsFactory::makeTestFilePathHelper($configuration),
        ServicesSeparateTestsFactory::makeLevelDeepService($configuration->getDepthLevel()),
        $configuration->getResultPath(),
        $logger
    );

    $application->add(new SeparateTestsCommand($separateHandler, $logger, 'separate'));

    $application->run();
} catch (Exception $e) {
    $logger->error($e->getMessage());
}
