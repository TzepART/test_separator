#!/usr/bin/env php
<?php
declare(strict_types=1);

use Symfony\Component\Console\Application;
use \TestSeparator\Command\SeparateTestsCommand;
use \TestSeparator\Handler\SeparateTestsHandler;
use \TestSeparator\Handler\ServicesSeparateTestsFactory;

require __DIR__ . '/vendor/autoload.php';

$application = new Application();

// TODO make builder
try {
    $configuration    = ServicesSeparateTestsFactory::makeConfiguration(__DIR__ . '/config.json');
    $fileSystemHelper = ServicesSeparateTestsFactory::makeTestFilePathHelper($configuration);

    $separateHelper = new SeparateTestsHandler($fileSystemHelper, $configuration);

    $application->add(new SeparateTestsCommand($separateHelper, 'separate'));

    $application->run();
} catch (Exception $e) {
    echo $e->getMessage().PHP_EOL;
}
