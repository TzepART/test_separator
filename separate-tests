#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;
use \TestSeparator\Command\SeparateTestsCommand;
use \TestSeparator\Handler\SeparateTestsHandler;
use \TestSeparator\Handler\ServicesSeparateTestsFactory;

$autoloadPaths = [
    __DIR__ . '/../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php',
];

foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        require_once $path;
    }
}

$application = new Application();

// TODO make builder
$fileSystemHelper = ServicesSeparateTestsFactory::makeFileSystemHelper();
$levelDeepHelper  = ServicesSeparateTestsFactory::makeLevelDeepService(ServicesSeparateTestsFactory::DIRECTORY_LEVEL);

$separateHelper = new SeparateTestsHandler($fileSystemHelper, $levelDeepHelper);

$application->add(new SeparateTestsCommand($separateHelper, 'separate'));

$application->run();
