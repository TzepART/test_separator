#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;
use \TestSeparator\Command\SeparateTestsCommand;
use \TestSeparator\Handler\SeparateTestsHandler;
use \TestSeparator\Handler\FileSystemHelper;

$autoloadPaths = [
    __DIR__ . '/../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php'
];

foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        require_once $path;
    }
}

$application = new Application();

$separateHelper = (new SeparateTestsHandler())
    ->setFileSystemHelper(new FileSystemHelper());

$application->add(new SeparateTestsCommand($separateHelper,'separate-tests'));

$application->run();
