#!/usr/bin/env php
<?php
declare(strict_types=1);

use Symfony\Component\Console\Application;
use \TestSeparator\Command\SeparateTestsCommand;
use \TestSeparator\Handler\SeparateTestsHandler;
use \TestSeparator\Handler\ServicesSeparateTestsFactory;
use \TestSeparator\Handler\ConfigurationFactory;

require 'vendor/autoload.php';

$application = new Application();

// TODO make builder
try {
    $configuration = ConfigurationFactory::makeConfiguration(__DIR__ . '/config.json');

    $separateHandler = new SeparateTestsHandler(
        ServicesSeparateTestsFactory::makeTestFilePathHelper($configuration),
        ServicesSeparateTestsFactory::makeLevelDeepService($configuration->getDepthLevel()),
        $configuration->getResultPath()
    );

    $application->add(new SeparateTestsCommand($separateHandler, 'separate'));

    $application->run();
} catch (Exception $e) {
    echo $e->getMessage() . PHP_EOL;
}
